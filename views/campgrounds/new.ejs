<% include ../partials/header %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <h1 class="d-4 text-center">Create a New campground</h1>
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="campName">Camp Name</label>
                    <input type="text" name="campName" placeholder="campname" class="form-control">
                </div>
                <div class="form-group">
                    <label for="imageUrl">Image URL</label>
                    <input type="text" name="imageUrl" placeholder="image url" class="form-control">
                </div>
                <div class="form-group">
                    <label for="imageUrl">Camp Description</label>
                    <input type="text" name="desc" placeholder="Enter a camp descrtption" class="form-control">
                </div>
                <div class="d-flex justify-content-between">
                    <a href="/" class="btn btn-danger">Back</a>
                    <input type="submit" class="btn btn-success">
                </div>
            </form>

        </div>            
    </div>
</div>



