<% include ../partials/header %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <h1 class="d-4 text-center">Edit Comment</h1>
            <form action="/campgrounds/<%=camps_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="comment[text]">Text</label>
                    <input type="text" name="comment[text]" placeholder="Text" value="<%=comment.text%>" class="form-control">
                </div>
                <div class="d-flex">
                    <input type="submit" class="btn btn-success  w-100">
                </div>
                <a href="/" class="btn btn-danger  w-100 mt-2">Back</a>
            </form>

        </div>            
    </div>
</div>



<% include ../partials/footer %>